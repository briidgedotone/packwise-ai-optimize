# Stripe Configuration (get from https://dashboard.stripe.com)
# Test mode keys start with pk_test_ and sk_test_
# Production keys start with pk_live_ and sk_live_

# Publishable key (used in frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Price IDs from Stripe Dashboard (create products first)
VITE_STRIPE_STARTER_MONTHLY_PRICE_ID=price_starter_monthly_id_here
VITE_STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly_id_here
VITE_STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_professional_monthly_id_here
VITE_STRIPE_PROFESSIONAL_YEARLY_PRICE_ID=price_professional_yearly_id_here

# Secret key (used in backend - NEVER expose to frontend)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Webhook signing secret (from Stripe webhook endpoint settings)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here